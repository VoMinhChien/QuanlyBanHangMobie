@model IEnumerable<demo.Models.GioHang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GIỎ HÀNG</h1>

<p>
    <button class="them">  < asp-action="Create">Thêm Mới</></button>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThanhTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThueVat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKhachHangNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThueVat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhachHangNavigation.MaKhachHang)
            </td>
            <td>
                <button class="sua"> <a asp-action="Edit" asp-route-id="@item.MaGioHang">Sửa</a>  </button>
                <button class="xoa"> <a asp-action="Delete" asp-route-id="@item.MaGioHang">Xóa</a> </button>
                <button class="chitiet"> <a asp-action="Details" asp-route-id="@item.MaGioHang">Thông Tin</a> </button>

            </td>
        </tr>
}
    </tbody>
</table>
