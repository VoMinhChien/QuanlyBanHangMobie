@model IEnumerable<demo.Models.TheLoai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>THỂ LOẠI</h1>

<p>
    <button class="them">
         <a asp-action="Create"> Thêm Mới</a>
    </button>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenTheLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isdelete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isdelete)
            </td>
            <td>
                <button class="sua"><a asp-action="Edit" asp-route-id="@item.MaTheLoai">Sửa</a>  </button>
                <button class="xoa"><a asp-action="Delete" asp-route-id="@item.MaTheLoai">Xóa</a> </button>
                <button class="chitiet"><a asp-action="Details" asp-route-id="@item.MaTheLoai">Thông Tin</a>  </button>
            </td>
        </tr>
}
    </tbody>
</table>
