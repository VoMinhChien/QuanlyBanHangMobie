@using demo.Models

@{
    Layout = "_Layout";
    var sanphams = ViewBag.sanphams as List<SanPham>;
}

<style>
    .products {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }

    .anhsanpham {
        width: 80%;
        margin-left:30px;
    }

    .ttsp {
        /*background-color:red;*/
        text-decoration: none;
        border: 1px solid black;
    }
</style>
<div class ="products">
    @if(sanphams != null)
    {
        foreach(var product in sanphams)
        {
            <a class ="ttsp" asp-controller="ShowSanPham" asp-action="Details" asp-route-id="@product.MaSanPham">
                <img class='anhsanpham' src="~/Images/@product.HinhAnh" />
                <h3 style="text-align:center">@product.TenSanPham</h3>
                <div style="text-align:center">Giá : @product.GiaSanPham.ToString() đ</div>
               @* <img style="margin-left:40%" src="~/Images/giohangmauden.png">*@
            </a>
        }

           
           
        
    }
</div>