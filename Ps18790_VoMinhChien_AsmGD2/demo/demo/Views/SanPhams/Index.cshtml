@model IEnumerable<demo.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SẢN PHẨM</h1>

<p>
    <button class ="them">
        <a asp-action="Create">Thêm Mới</a>
    </button>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThongTin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isdelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaTheLoaiNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isdelete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaTheLoaiNavigation.MaTheLoai)
            </td>
            <td>
                <button class="sua"> <a asp-action="Edit" asp-route-id="@item.MaSanPham">Sửa</a>  </button>
                <button class="xoa"><a asp-action="Delete" asp-route-id="@item.MaSanPham">Xóa</a> </button>
                <button class="chitiet"><a asp-action="Details" asp-route-id="@item.MaSanPham">Thông Tin</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
